{% extends "base.j2" %}

{% block menu %}
    <nav>
    {{ macros.render_main_menu() }}
    </nav>
{% endblock %}

{% block content %}
<article class="post">
    <header>
        <h2>{{ resource.meta.title }}</h2> 
        {% if resource.meta.date %}
        <p class="datetime">{{ macros.render_date( resource.meta.date ) }}</p>
        {% endif %}
    </header>
    <section>
        {% mark content -%}
        {% filter markdown|typogrify -%}
        {% block post %}{% endblock %}
        {%- endfilter %}
        {%- endmark %}
    </section>
    <section class="tags">
{% filter markdown|typogrify -%}
    {% for res in resource.node.walk_resources_tagged_with(resource.meta.tags.0) %}
{%- if loop.first %}
####Related posts: 
{% endif -%}
[{{ res.meta.title }}]({{ res.full_url }})
        {%- if not loop.last %}
, 
        {% endif -%}
    {%- endfor -%}
{%- endfilter %}
    </section>
 </article>
{% if site.config.mode == "development" %}
{% include media_url('js/disqus.js') %}
{% endif %}
{% endblock %}
